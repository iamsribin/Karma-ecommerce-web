<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="img/fav.png" />
    <title>registration</title>
    <link rel="stylesheet" href="/css/login.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
    />
  </head>
  <style>
    .password-input {
      position: relative;
    }

    .password-input input {
      padding-right: 150px; /* Adjust as needed */
    }

    .toggle-password {
      position: absolute;
      right: 10px; /* Adjust as needed */
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
    }

    .toggle-password i {
      cursor: pointer;
    }
  </style>
  <body>
    <!-- <h2>Weekly Coding Challenge #1: Sign in/up Form</h2> -->
    <div class="container" id="container">
      <div class="form-container sign-up-container">
        <form id="signUp-form">
          <h1>Create Account</h1>
          <div class="social-container">
            <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
            <a href="/auth/google/callback" class="social"
              ><i class="fab fa-google-plus-g"></i
            ></a>
            <!-- <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a> -->
          </div>
          <span style="color: black">or use your email for registration</span>
          <div class="error-message-signup" style="color: red"></div>
          <input name="name" type="text" id="user" placeholder="Name" />
          <span id="userSpan"></span>

          <input name="email" id="email" type="email" placeholder="Email" />
          <span id="emailSpan"></span>

          <div class="password-input">
            <input
              name="password1"
              id="password1"
              type="password"
              placeholder="Password"
            />
            <span
              class="toggle-password"
              onclick="togglePasswordVisibility('password1', 'toggleIcon')"
            >
              <i class="fas fa-eye" id="toggleIcon"></i>
            </span>
          </div>
          <!-- <input
            name="password1"
            id="password1"
            type="password"
            placeholder="Password"
          /> -->
          <span id="passwordSpan"></span>
          <div class="password-input">
            <input
              name="password2"
              id="password2"
              type="password"
              placeholder="Confirm Password "
            />
            <span
              class="toggle-password"
              onclick="togglePasswordVisibility('password2', 'toggleIcon2')"
            >
              <i class="fas fa-eye" id="toggleIcon2"></i>
            </span>
          </div>

          <!-- <input
            name="password2"
            id="password2"
            type="password"
            placeholder="Conform Password"
          /> -->

          <span id="password2Span"></span>
          <button type="submit" style="margin-top: 15px">Sign Up</button>
        </form>
      </div>
      <div class="form-container sign-in-container">
        <form id="login-form">
          <h1>Sign in</h1>
          <div class="social-container">
            <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
            <a href="/auth/google/callback" class="social"
              ><i class="fab fa-google-plus-g"></i
            ></a>
            <!-- <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a> -->
          </div>
          <span style="color: black">or use your account</span>
          <div class="error-message" style="color: red"></div>
          <input name="email" id="emailIn" type="email" placeholder="Email" />
          <span id="emailSignIn"></span>
          <div class="password-input">
            <input
            name="password"
            id="passwordIn"
            type="password"
            placeholder="Password"
          />
            <span
              class="toggle-password"
              onclick="togglePasswordVisibility('passwordIn', 'toggleIcon3')"
            >
              <i class="fas fa-eye" id="toggleIcon3"></i>
            </span>
          </div>
          
          <!-- <input
            name="password"
            id="passwordIn"
            type="password"
            placeholder="Password"
          /> -->
          <span id="passwordSignIn"></span>
          <a href="/sendmail">Forgot your password?</a>
          <button type="submit">Sign In</button>
        </form>
      </div>
      <div class="overlay-container">
        <div class="overlay">
          <div class="overlay-panel overlay-left">
            <h1>Welcome Back!</h1>
            <p>
              To keep connected with us please login with your personal info
            </p>
            <button class="ghost" id="signIn">Sign In</button>
          </div>
          <div class="overlay-panel overlay-right">
            <h1>Hello, Friend!</h1>
            <p>Enter your personal details and start journey with us</p>
            <button class="ghost" id="signUp">Sign Up</button>
          </div>
        </div>
      </div>
    </div>
    <div class="loading-overlay">
      <div class="spinner"></div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      function togglePasswordVisibility(inputId, iconId) {
       
        const passwordInput = document.getElementById(inputId);
        const toggleIcon = document.getElementById(iconId);
        if (passwordInput.type === "password") {
          console.log("clikc");
          passwordInput.type = "text";
          toggleIcon.classList.remove("fa-eye");
          toggleIcon.classList.add("fa-eye-slash");
        } else {
          passwordInput.type = "password";
          toggleIcon.classList.remove("fa-eye-slash");
          toggleIcon.classList.add("fa-eye");
        }
      }
    </script>
        <script src="/frond-end-JS/login.js"></script>
  </body>
</html>
