<%- include('../userPartials/header'); %>
<style>
  .sidebar-wrapper {
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 5px;
  }

  .filter-title {
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 20px;
    color: #333;
  }

  .filter-group {
    margin-bottom: 20px;
  }

  .filter-group h5 {
    font-size: 1rem;
    margin-bottom: 10px;
    color: #555;
  }

  .filter-list {
    list-style-type: none;
    padding-left: 0;
  }

  .filter-list li {
    margin-bottom: 5px;
  }

  .filter-list label {
    display: inline-block;
    margin-left: 5px;
    color: #666;
  }

  .filter-list span {
    color: #999;
    font-size: 0.9rem;
  }

  .size-list {
    display: flex;
    flex-wrap: wrap;
  }

  .size-list li {
    margin-right: 10px;
  }

  .price-range {
    display: flex;
    align-items: center;
  }

  .price-slider {
    width: 100%;
    margin-right: 10px;
  }

  .apply-filters-btn {
    display: block;
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .apply-filters-btn:hover {
    background-color: #0056b3;
  }
</style>
<!-- Breadcrumb Start -->
<div class="breadcrumb-wrap">
  <div class="container-fluid">
    <ul class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active">Category</li>
    </ul>
  </div>
</div>
<!-- Product List Start -->
<div class="product-view">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-9">
        <div class="row">
          <div class="col-md-12">
            <div class="product-view-top">
              <div class="row">
                <div class="">
                  <div class="product-short">
                    <div >
                      <select style="width: 164px; height: 40px" id="sortProduct">
                        <option value="Newest">Newest</option>
                        <option value="LowtoHigh">Low to High</option>
                        <option value="HightoLow">High to Low</option>
                        <option value="aToz">aA to zZ</option>
                        <option value="zToa">zZ to Aa</option>
                      </select>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div id="product-list" class="row col-md-12">
            <% if (locals.products.length === 0) { %>
            <p>No product found</p>
            <% } else { %> <% locals.products.forEach((product) => { %> <% if
            (product.isActive === true) { %>
            <div class="col-lg-4 col-md-6 col-sm-12">
              <div class="product-item">
                <div class="product-title rounded-top">
                  <div class="ratting d-flex justify-content-between">
                    <div>
                      <%if(product.rating){%>
                      <% for (let i = 1; i <= 5; i++) { %>
                        <% if (i <= Math.round(product.rating)) { %>
                          <i class="fa fa-star"></i>
                        <% } else { %>
                          <i class="fa fa-star-o"></i>
                        <% } %>
                      <% } %>
                   <%}%>
                  </div>
                    <% if (product.totalQuantity == 0) { %>
                    <span class="badge badge-danger">Out Of Stock</span>
                    <% } else if (product.totalQuantity < 10) { %>
                    <span class="badge badge-warning">Limited Stock</span>
                    <% } else { %>
                    <span class="badge badge-success">In Stock</span>
                    <% } %>
                  </div>
                </div>
                <div class="product-image">
                  <a href="product-detail.html">
                    <img
                      src="<%= product.imagePaths[0] %>"
                      alt="Product Image"
                    />
                  </a>
                  <div class="product-action">
                    <a
                      href=""
                      tabindex="0"
                      class="addToWishlist"
                      data-id="<%= product._id %>"
                      data-toggle="tooltip"
                      title="wishlist"
                    >
                      <i class="fa fa-heart"></i>
                    </a>
                    <a
                      href="/product/<%= product._id %>"
                      tabindex="0"
                      data-toggle="tooltip"
                      title="view"
                      ><i class="fa fa-search"></i
                    ></a>
                  </div>
                </div>
                <div class="product-price rounded-bottom">
                  <div class="">
                    <div>
                      <span><b><%= product.name %></b></span>
                    </div>
                  </div>
                  <div class="text-dark d-flex justify-content-between">
                    <div>
                      <% function capitalizeFirstLetter(string) { return
                      string.charAt(0).toUpperCase() + string.slice(1); } %>
                      <span
                        ><%=
                        product.tag.tagName.toLowerCase()
                        %>'s <%=
                        product.category.name.toLowerCase()
                        %> shoe</span
                      >
                    </div>

                    <div>
                      <span class="badge badge-light"
                        ><%= product.brand.name %></span
                      >
                    </div>
                  </div>
                  <% if (product.offerAmount) { %>
                  <h6 class="text-dark">
                    $ <%= product.offerAmount %>&nbsp;&nbsp;
                    <span style="text-decoration: line-through; color: crimson"
                      ><%= product.basePrice %></span
                    >
                  </h6>
                  <% } else { %>
                  <h6 class="text-dark">
                    <span>$</span><%= product.basePrice %>
                  </h6>
                  <% } %>
                </div>
              </div>
            </div>
            <% } %> <% }) %> <% } %>
          </div>

          <!-- Pagination Start -->
          <div class="col-md-12">
            <nav aria-label="Page navigation example">
              <ul class="pagination justify-content-center">
                <%for(let i = 1; i <= totalPages; i++ ){%>
                <li class="page-item">
                  <a class="page-link" href="/filter?page=<%= i %>"><%=i%></a>
                </li>
                <%}%>
                <!-- <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                  </li>
                  <li class="page-item active"><a class="page-link" href="#">1</a></li>
                  <li class="page-item"><a class="page-link" href="#">2</a></li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                  </li> -->
              </ul>
            </nav>
          </div>
        </div>
      </div>

      <!-- Side Bar Start -->
      <div class="col-lg-3">
        <div class="sidebar-wrapper">
          <div class="sidebar-filter">
            <h4 class="filter-title">Product Filters</h4>

            <!-- Gender Filter -->
            <div class="filter-group">
              <h5>Gender</h5>
              <ul class="filter-list">
                <% tags.forEach((tag) => { %>
                <li>
                  <input
                    name="gender"
                    value="<%= tag._id %>"
                    type="checkbox"
                    id="men"
                  />
                  <label for="men"><%= tag.tagName %> <span>(29)</span></label>
                </li>
                <% }) %>
              </ul>
            </div>

            <!-- Category Filter -->
            <div class="filter-group">
              <h5>Category</h5>
              <ul class="filter-list">
                <% categorys.forEach((category) => { %>
                <li>
                  <input
                    name="category"
                    value="<%= category._id %>"
                    type="checkbox"
                    id="men"
                  />
                  <label for="men"
                    ><%= category.name %> <span>(29)</span></label
                  >
                </li>
                <% }) %>
              </ul>
            </div>

            <!-- Brand Filter -->
            <div class="filter-group">
              <h5>Brands</h5>
              <ul class="filter-list">
                <% brands.forEach((brand) => { %>
                <li>
                  <input
                    name="brand"
                    value="<%= brand._id %>"
                    type="checkbox"
                    id="men"
                  />
                  <label for="men"><%= brand.name %> <span>(29)</span></label>
                </li>
                <% }) %>
              </ul>
            </div>

            <!-- Size Filter -->
            <div class="filter-group">
              <h5>Size</h5>
              <ul class="filter-list size-list">
                <% sizes.forEach((size) => { %>
                <li>
                  <input
                    name="size"
                    value="<%= size._id %>"
                    type="checkbox"
                    id="men"
                  />
                  <label for="men"><%= size.size %> <span>(29)</span></label>
                </li>
                <% }) %>
              </ul>
            </div>

            <!-- Price Range Filter -->
            <div class="filter-group">
              <h5>Price Range</h5>
              <div class="price-range">
                <input
                  type="range"
                  min="500"
                  max="20000"
                  value="30000"
                  class="price-slider"
                  id="priceRange"
                />
                <p>$<span id="priceValue">30000</span></p>
              </div>
            </div>

            <!-- Apply Filters Button -->
            <button class="apply-filters-btn">Apply Filters</button>
          </div>
        </div>
      </div>
      <!-- Side Bar End -->

      <script>
        const priceRange = document.getElementById("priceRange");
        const priceValue = document.getElementById("priceValue");

        priceRange.addEventListener("input", function () {
          priceValue.textContent = this.value;
        });
      </script>
    </div>
  </div>
</div>

<!-- Product List End -->

