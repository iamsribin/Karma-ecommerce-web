<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<!-- Toastr JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<!-- Quantity Script -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
  const quantityInput = document.getElementById("quantity");
  const getQuntity = document.getElementById("getQuntity");
  const totalQuantity = parseInt(getQuntity.getAttribute("data-id"));
  const btnPlus = document.querySelector(".btn-plus");
  const btnMinus = document.querySelector(".btn-minus");

  const showToast = (message) => {
  toastr.options = {
    "positionClass": "toast-top-center",
    "timeOut": "3000",
    "closeButton": true,
  };
  toastr.info(message);
};


const showSuccessToast = (message) => {
  toastr.options = {
    "positionClass": "toast-top-center",
    "timeOut": "3000",
    "closeButton": true,
  };
  toastr.success(message);
};

const showErrorToast = (message) => {
  toastr.options = {
    "positionClass": "toast-top-center",
    "timeOut": "3000",
    "closeButton": true,
  };
  toastr.error(message);
};

  btnPlus.addEventListener("click", () => {
    let quantity = parseInt(quantityInput.value);

    if (quantity >= totalQuantity) {
      showToast(`Only ${totalQuantity} items available`);
      quantityInput.value = totalQuantity ? totalQuantity: 1;
      // btnPlus.disabled = true;
    } else if (quantity >= 9) {
      showToast("You can only add 10 items");
      quantityInput.value = 10;
      // btnPlus.disabled = true;
    } else {
      quantityInput.value = quantity + 1;
    }

    btnMinus.disabled = quantityInput.value <= 1;
  });

  btnMinus.addEventListener("click", () => {
    let quantity = parseInt(quantityInput.value);

    if (quantity <= 1) {
      showToast("One item needed");
      quantityInput.value = 1;
      // btnMinus.disabled = true;
    } else {
      quantityInput.value = quantity - 1;
    }

    btnPlus.disabled = quantityInput.value >= totalQuantity || quantityInput.value >= 10;
  });

  // Highlight selected size
  let selectedSize = null;
  document.getElementById("size-buttons").addEventListener("click", (e) => {
    if (e.target.classList.contains("size-button")) {
      document.querySelectorAll(".size-button").forEach(button => button.classList.remove("selected"));
      e.target.classList.add("selected");
      selectedSize = e.target.getAttribute("data-size");
    }
  });

  // Add to Cart
  const addToCartButton = document.getElementById("addToCart");
  addToCartButton.addEventListener("click", async (e) => {
    e.preventDefault();

    const productId = addToCartButton.getAttribute("data-id");
    const quantity = quantityInput.value;
    const size = selectedSize;
    if (!size) {
      showToast("Please select a size");
      return;
    }

    try {
      const response = await fetch("/add-to-cart", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ productId, size, quantity }),
      });

      if (response.ok) {
        Swal.fire({
            icon: "success",
            title: "Product added to cart successfully",
            showConfirmButton: false,
            timer: 1500,
          }).then(() => {
            window.location.reload();
          })
      } else {
        const errorData = await response.json();
        showErrorToast(`Oops... ${errorData.message}`);
      }
    } catch (error) {
      console.log(error);
      showErrorToast(`An error occurred: ${error.message}`);
    }
  });
});


</script>

<script>
   const addToWishlistButtons = document.querySelectorAll(".addToWishlist");
            addToWishlistButtons.forEach((item) => {
                item.addEventListener("click", async (e) => {
                    e.preventDefault();
                    const productId = item.dataset.id;
                    try {
                        const response = await fetch("/add-wishlist", {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json",
                            },
                            body: JSON.stringify({ productId }),
                        });

                        const data = await response.json();
                        if (response.ok) {
                            showSuccessToast("Item added to wishlist ");
                        } else {
                            showErrorToast(data.message);
                        }
                    } catch (error) {
                        console.error(error);
                        showErrorToast("Failed to add to wishlist");
                    }
                });
            });
</script>

