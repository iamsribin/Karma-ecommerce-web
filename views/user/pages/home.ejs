<!-- start product Area -->
<div class="single-product-slider">
  <div class="container">
    <div class="row">
      <!-- single product -->

      <% locals.products.forEach((product)=>{ %>
         <% if( product.isActive===true){%>
          <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="single-product">
              <div class="product-image-wrapper">
                <a href="/product/<%= product._id %>">
                  <img class="img-fluid" src="<%= product.imagePaths[0] %>" alt="" />
                  <div class="image-overlay">
                    <a href="" id="add-to-cart" data-id="<%=product._id%>" class="social-info">
                      <span class="ti-bag"></span>
                      <p class="hover-text">add to bag</p>
                    </a>
                    <a href="" id="wishlist" class="social-info">
                      <span class="lnr lnr-heart"></span>
                      <p class="hover-text">Wishlist</p>
                    </a>
                    <a href="/product/<%= product._id %>" class="social-info">
                      <span class="lnr lnr-move"></span>
                      <p class="hover-text">view more</p>
                    </a>
                  </div>
                </a>
              </div>
              <div class="product-details">
                <h6><%= product.name %></h6>
                <h5>BRAND : <%= product.brand.name %></h5>
                <h5>CATEGORY : <%= product.category.name %></h5>
                <div class="price">
                  <% if (product.offerAmount) { %>
                    <h6>$<%= product.offerAmount %></h6>
                    <h6 class="l-through">$<%= product.basePrice %></h6>
                  <% } else { %>
                    <h6>$<%= product.basePrice %></h6>
                  <% } %>
                  <% if (product.totalQuantity < 10) { %>
                    <h6 style="color: rgb(255, 136, 0)">Limited Stock</h6>
                  <% } else if (product.totalQuantity == 0) { %>
                    <h6 style="color: red">Out of Stock</h6>
                  <% } else { %>
                    <h6 style="color: rgb(0, 255, 17)">In Stock</h6>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
      <%}%> <%})%>
    </div>
  </div>
</div>

