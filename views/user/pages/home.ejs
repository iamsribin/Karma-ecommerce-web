<!-- Featured Product Start -->
<div class="featured-product product">
  <div class="container-fluid">
    <div class="section-header">
      <h1>Featured Product</h1>
    </div>
    <div class="row align-items-center product-slider product-slider-4">
      <% locals.products.forEach((product)=>{ %> <% if(
      product.isActive===true){%>
      <div class="col-lg-3" style="width: 450px">
        <div class="product-item">
          <div class="product-title">
            <div class="text-left">
              <a href="#"><%= product.name %></a>
            </div>

            <div class="ratting d-flex justify-content-between">
              <div>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
              </div>
              <% if (product.totalQuantity < 10) { %>
              <i
                style="
                  background-color: rgb(255, 174, 0);
                  color: rgb(0, 0, 0);
                  border-radius: 7px;
                "
                >&nbsp; Limited Stock &nbsp;</i
              >
              <% } else if (product.totalQuantity == 0) { %>
              <i
                style="
                  background-color: rgb(255, 0, 0);
                  color: rgb(0, 0, 0);
                  border-radius: 7px;
                "
                >&nbsp; Out Of Stock &nbsp;</i
              >
              <% } else { %>
              <i
                style="
                  background-color: greenyellow;
                  color: rgb(0, 0, 0);
                  border-radius: 7px;
                "
                >&nbsp; In Stock &nbsp;</i
              >
              <% } %>
            </div>
          </div>
          <div class="product-image">
            <a href="product-detail.html">
              <img src="<%= product.imagePaths[0] %>" alt="Product Image" />
            </a>
            <div class="product-action">

              <a href="#" tabindex="0" data-toggle="tooltip" title="wishlist"
                ><i class="fa fa-heart"></i
              ></a>
              <a
                href="/product/<%= product._id %>"
                tabindex="0"
                data-toggle="tooltip"
                title="view"
                ><i class="fa fa-search"></i
              ></a>

            </div>
          </div>
          <div class="product-price">
            <div class="text-black">
              <span><b>BRAND : &nbsp;&nbsp;&nbsp;</b></span>
              <span class="text-capitalize"> <%= product.brand.name %></span
              ><br />
              <span><b>Category : &nbsp;</b></span>
              <span><%= product.category.name %></span>
            </div>
            <% if (product.offerAmount) { %>
            <h5 class="text-white">
              $ <%= product.offerAmount %>&nbsp;&nbsp;
              <span style="text-decoration: line-through; color: crimson"
                ><%= product.basePrice %></span
              >
            </h5>
            <% } else { %>
            <h5 class="text-white"><span>$</span><%= product.basePrice %></h5>
            <% } %>
            <!-- <a class="btn" href=""><i class="fa fa-shopping-cart"></i>Buy Now</a> -->
          </div>
        </div>
      </div>
      <%}%> <%})%>
    </div>
  </div>
</div>
<!-- Featured Product End -->

