/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<script>
  // Form validation and submission
  document.addEventListener("DOMContentLoaded", function () {
    emailjs.init("IcSVFVwx7EVnWQC43");

    const form = document.getElementById("contact-form");

    form.addEventListener("submit", function (event) {
      event.preventDefault(); // Prevent the default form submission

      // Validation
      const name = document.getElementById("name").value.trim();
      const email = document.getElementById("email").value.trim();
      const subject = document.getElementById("subject").value.trim();
      const message = document.getElementById("message").value.trim();

      // Name validation (only characters allowed)
      if (!/^[a-zA-Z\s]+$/.test(name)) {
        showErrorToast("Please enter a valid name (only characters allowed)");
        return;
      }

      // Email validation
      if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
        showErrorToast("Please enter a valid email address");
        return;
      }

      // Check if all fields are filled
      if (!name || !email || !subject || !message) {
        showErrorToast("Please fill in all fields");
        return;
      }

      // If validation passes, send email
      emailjs
        .send("service_stjqji5", "template_6eo4b2a", {
          name: name,
          email: email,
          subject: subject,
          message: message,
        })
        .then(
          function (response) {
            console.log("Success!", response.status, response.text);
            showSuccessToast("Your message has been sent successfully!");
            form.reset();
          },
          function (error) {
            console.error("Failed!", error);
            showErrorToast("Failed to send message. Please try again later.");
          }
        );
    });
  });
</script>

