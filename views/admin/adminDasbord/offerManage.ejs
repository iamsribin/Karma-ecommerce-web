<body id="reportsPage">
    <div class="container mt-5" style="padding: 0 100px 0">
        <h1 class="text-white mb-4">Offer Management</h1>
        <!-- Referral Offer Section -->
        <div class="offer-section">
          <h2>Referral Offers</h2>
