<%- include('../admin-partials/header'); %>
<div class="container tm-mt-big tm-mb-big">
  <div class="row">
    <div class="col-lg col-md-12 col-sm-12 mx-auto">
      <form id="addCouponForm">
        <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
          <div class="row tm-edit-product-row">
            <div class="col-lg-6 col-md-6 col-sm-12">
              <div class="form-group mb-3">
                <label for="name" style="color: white">Name</label>
                <input
                  id="name"
                  name="name"
                  data_id = "<%= coupon._id %>"
                  type="text"
                  value="<%= coupon.name %>"
                  class="form-control"
                  style="background-color: white; color: black"
                />
                <span id="error-message-name" class="text-danger"></span>
              </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
              <div class="form-group mb-3">
                <label for="couponCode" style="color: white">Coupon Code</label>
                <input
                  id="couponCode"
                  name="couponCode"
                  type="text"
                  value="<%= coupon.couponCode %>"
                  class="form-control"
                  style="background-color: white; color: black"
                />
                <span id="error-message-coupon-code" class="text-danger"></span>
              </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
              <div class="form-group mb-3">
                <label for="couponCode" style="color: white"
                  >Maximum Uses</label
                >
                <input
                  id="maximumUses"
                  name="maximumUses"
                  type="number"
                  value="<%= coupon.maximumUses ? coupon.maximumUses : '' %>"
                  class="form-control"
                  placeholder="optional"
                  style="background-color: white; color: black"
                />
                <span id="error-message-maxUse-code" class="text-danger"></span>
              </div>
            </div>
          </div>
          <div class="row tm-edit-product-row">
            <div class="col-lg-3 col-md-6 col-sm-12">
              <div class="form-group mb-3">
                <label for="expiryDate" style="color: white">Expiry Date</label>
                <input
                  id="expiryDate"
                  name="expiryDate"
                  type="date"
                  value="<%= coupon.expiryDate ? coupon.expiryDate.toISOString().split('T')[0] : '' %>"
                  class="form-control"
                  style="background-color: white; color: black"
                />
                <span id="error-message-expiry-date" class="text-danger"></span>
              </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
              <div class="form-group mb-3">
                <label for="startDate" style="color: white">Start Date</label>
                <input
                  id="startDate"
                  name="startDate"
                  type="date"
                  value="<%= coupon.startDate ? coupon.startDate.toISOString().split('T')[0] : '' %>"
                  class="form-control"
                  style="background-color: white; color: black"
                />
                <span id="error-message-start-date" class="text-danger"></span>
              </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
              <div class="form-group mb-3">
                <label for="minimumPurchaseAmount" style="color: white"
                  >Minimum Purchase Amount</label
                >
                <input
                  id="minAmount"
                  name="minimumPurchaseAmount"
                  type="number"
                  class="form-control"
                  value="<%= coupon.minimumPurchaseAmount ? coupon.minimumPurchaseAmount : '' %>"
                  placeholder="optional"
                  style="background-color: white; color: black"
                />
                <span id="error-message-min-amount" class="text-danger"></span>
              </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
              <div class="form-group mb-3">
                <label for="offerAmount" style="color: white"
                  >Offer Amount</label
                >
                <input
                  id="offerAmount"
                  name="offerAmount"
                  type="number"
                  value="<%= coupon.offerAmount %>"
                  class="form-control"
                  style="background-color: white; color: black"
                />
                <span
                  id="error-message-offer-amount"
                  class="text-danger"
                ></span>
              </div>
            </div>
          </div>
          <hr />
          <div class="row tm-edit-product-row">
            <div class="col-12" style="display: flex; justify-content: center">
              <button type="submit" class="btn btn-primary text-uppercase">
                Add Coupon Now
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/admin/admin-frond-end-js/editCouponScript.js"></script>
<%- include('../admin-partials/footer'); %>
